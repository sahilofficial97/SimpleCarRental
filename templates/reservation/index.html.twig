{% extends 'base.html.twig' %}

{% block title %}My Reservations | Simple Car Rental{% endblock %}

{% block body %}
  <section class="min-h-screen bg-gradient-to-br from-slate-50 to-white py-12">
    <div class="mx-auto max-w-7xl px-6">
      <h1 class="text-3xl font-extrabold tracking-tight text-slate-800">My reservations</h1>
      <p class="mt-2 text-slate-600">Here are your upcoming and past bookings.</p>

      {% if reservations is empty %}
        <div class="mt-8 rounded-md border border-slate-200 bg-white px-4 py-6 text-center text-slate-600">
          You have no reservations yet.
        </div>
      {% else %}
        <div class="mt-8 overflow-hidden rounded-lg border border-slate-200 bg-white shadow">
          <table class="min-w-full divide-y divide-slate-200">
            <thead class="bg-slate-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-600">Car</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-600">Type</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-600">Dates</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-slate-600">Total</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200">
              {% for r in reservations %}
                <tr class="hover:bg-slate-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-slate-800">{{ r.car.brandName }}</div>
                    <div class="text-sm text-slate-600">{{ r.car.seatAmount }} seats • {{ r.car.color }}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap capitalize text-sm text-slate-700">{{ r.car.type }}</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">
                    {{ r.startDate|date('Y-m-d') }} → {{ r.endDate|date('Y-m-d') }}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-slate-800">
                    € {{ r.totalPrice }}
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% endif %}
    </div>
  </section>
{% endblock %}
