{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-white">
        <div class="w-full max-w-md px-6 py-12">
            <div class="bg-white rounded-lg border border-slate-200 shadow">
                <div class="px-6 py-6">
                    <h1 class="text-2xl font-extrabold tracking-tight text-slate-800">Sign in to your account</h1>

                    {% if error %}
                        <div class="mt-4 rounded-md border border-red-300 bg-white px-4 py-3 text-sm text-red-800">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}" class="mt-6">
                        <div class="mb-5">
                            <label for="inputEmail" class="block text-sm font-medium text-slate-700 mb-1">Email</label>
                            <input
                                type="email"
                                id="inputEmail"
                                name="_username"
                                value="{{ last_username }}"
                                required
                                autofocus
                                autocomplete="email"
                                class="mt-1 block w-full rounded-md border border-slate-300 px-4 py-2 text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500"
                                placeholder="you@example.com"
                            >
                        </div>

                        <div class="mb-6">
                            <label for="inputPassword" class="block text-sm font-medium text-slate-700 mb-1">Password</label>
                            <input
                                type="password"
                                id="inputPassword"
                                name="_password"
                                required
                                autocomplete="current-password"
                                class="mt-1 block w-full rounded-md border border-slate-300 px-4 py-2 text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500"
                                placeholder="Your password"
                            >
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="inline-flex w-full items-center justify-center rounded-md bg-slate-900 px-5 py-3 text-white shadow hover:bg-slate-800 transition mt-5">
                            Sign in
                        </button>
                    </form>

                    <p class="mt-6 text-center text-sm text-slate-600">
                        Don't have an account?
                        <a href="{{ path('app_register') }}" class="font-medium text-slate-800 hover:underline">Create one</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
